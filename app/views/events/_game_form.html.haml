#exampleModalCenter.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalCenterTitle", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content.bg-dark
      .modal-header
        %h5#exampleModalCenterTitle.modal-title Neues Game
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        #error_container
        = form_with(model: game, class: 'game_form') do |form|
          .form-group
            = form.label 'Name'
            = form.text_field :name, class: 'form-control'
          .form-group
            = form.label 'Description'
            = form.text_area :description, class: 'form-control'
          .form-group
            = form.label 'Titelbild'
            = form.file_field :title_picture, class: 'form-control-file'
          = form.submit class: "btn btn-primary"
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes